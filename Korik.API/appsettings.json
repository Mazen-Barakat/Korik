{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Korik": "Data Source=.\\SQLEXPRESS;Initial Catalog=Korik;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },

  "AI": {
    "ModelId": "gpt-4o-mini",
    "ApiKey": "your-openai-api-key-here",
    "MaxHistoryMessages": 20
  },

  "Stripe": {
    "PublishableKey": "pk_test_your_publishable_key_here",
    "SecretKey": "sk_test_your_secret_key_here",
    "WebhookSecret": "whsec_your_webhook_secret_here"
  },

  "AutoMapper": {
    "LicenseKey": "your-automapper-license-key-here"
  },

  "consumers": {
    "AllowFrontend": "http://localhost:4200"
  },

  "jwt": {
    "issuer": "https://localhost:44352",
    "audience": "https://localhost:5000",
    "key": "your-jwt-secret-key-here-minimum-32-characters",
    "accessTokenExpirationMinutes": "100"
  },

  "frontend": {
    "confirmEmailURL": "http://localhost:4200/login?confirmed=true",
    "confirmPasswordURL": "http://localhost:4200"
  },

  "Authentication": {
    "Google": {
      "ClientId": "your-google-client-id.apps.googleusercontent.com",
      "ClientSecret": "your-google-client-secret-here"
    },
    "Facebook": {
      "AppId": "your-facebook-app-id-here",
      "AppSecret": "your-facebook-app-secret-here"
    }
  }
}